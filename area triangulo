#include <stdio.h>

int main() {
	float base = 0;
	float altura = 0;
	
	printf("Digite a base do triangulo: ");
	scanf("%f", &base);
	
	printf("\nDigite a altura do triangulo: ");
	scanf("%f", &altura);
	
	if (altura > 0 && base > 0) {
		float area = (base * altura) / 2;
		printf("A area do triangulo e: %.2f", area);
	} else {
		printf("Nenhum dos parametros podem ser negativo ou zero!");
		return 0;
	}
	
	return 0;
}
